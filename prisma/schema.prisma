datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                Int      @id @default(autoincrement())
  name              String
  shortDescription  String
  description       String
  price             Int
  stock             Int
  imageUrl          String
  imageAltText      String
  slug              String  @unique
  images            Image[]
  isFeatured        Boolean
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  altText    String
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
}
